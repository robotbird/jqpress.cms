@model Jqpress.Web.Models.BaseModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" >
<head profile="http://gmpg.org/xfn/11">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>@if(Model.IsDefault==0) {@Model.PageTitle}  else {@Model.SiteName}</title>
	<meta name="keywords" content="@Model.MetaKeywords" />
   <meta name="description" content="@Model.MetaDescription" />
    <link rel="stylesheet" type="text/css" media="all" href="/Themes/@Model.ThemeName/Content/style.css" />

	<!–[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]–>
	<script type="text/javascript" src="@Model.SiteUrl/common/scripts/jquery.js"></script>
<script type="text/javascript" src="@Model.SiteUrl/common/scripts/common.js"></script>
</head>

<body class="home blog">
<header id="header">
	<hgroup>
		<h1 id="logo"><a href="@Model.SiteUrl">@Model.SiteName</a></h1>
		<h2>@Model.SiteDescription</h2>
	</hgroup>
</header>
<div id="wrap">

	<nav id="menu">
	<ul id="menu-header" class="nav">
	

@foreach (var item in Model.NavLinks)
{
<li id="menu-item-2179" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-2179"><a href="@item.LinkUrl" title="@item.Description" target="@item.Target">@item.LinkName</a></li>
}


</ul></nav>

	<div id="toolbar">
		<div id="rss"><a href="@Model.FeedUrl" title="RSS Feed">RSS</a></div>
		<form id="searchform" method="get" action="@Model.SiteUrl">
			<input type="text" value="@Model.SearchKeyword" id="keyword" name="keyword" size="30" placeholder="Search" autocomplete="off" required />
			<button type="submit">Search</button>
		</form>
	</div>
<div id="content">

<!--中部-->


@RenderBody()


<!--底部-->

	</div>
</div>
<aside id="footer_box">

	<div id="linkcat">
	    @foreach (var item in Model.RecentTags)
     {
            <a href="@item.Url" title="@item.Description">@item.CateName</a><span>(@item.PostCount)</span>
     }
        <br />
        友链：
        @foreach (var item in @Model.GeneralLinks)
        {
            <a href="@item.LinkUrl" title="@item.Description" target="@item.Target">@item.LinkName</a>
        }
	</div>
</aside>

<footer id="footer">
	<p>
		@Model.FooterHtml
    . Powered by <a href="http://www.jqpress.com" target="_blank">Jqpress Blog</a>
    . Theme by <a href="http://www.jqpress.com" target="_blank">机器鸟</a>
	</p>
</footer>

